<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/nameOfUserWed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="Nguyen Huyen"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/numberUserWed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0358978828"
        app:layout_constraintStart_toStartOf="@+id/nameOfUserWed"
        app:layout_constraintTop_toBottomOf="@id/nameOfUserWed" />

    <TextView
        android:id="@+id/moneyGoWed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="500K"
        app:layout_constraintStart_toStartOf="@+id/nameOfUserWed"
        app:layout_constraintTop_toBottomOf="@+id/numberUserWed" />

    <TextView
        android:id="@+id/timeWedding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Chu nhat, 20/10/2019"
        app:layout_constraintStart_toStartOf="@+id/nameOfUserWed"
        app:layout_constraintTop_toBottomOf="@+id/moneyGoWed" />
</androidx.constraintlayout.widget.ConstraintLayout>